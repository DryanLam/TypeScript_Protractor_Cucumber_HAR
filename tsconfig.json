{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "watch": true,
      "allowJs": true,
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "module",
      "node",
      "cucumber",
      "chai"
    ],
    "exclude": ["node_modules"]
}